<!DOCTYPE html>
<html lang="uz">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Car Center</title>
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Pacifico&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css"
      rel="stylesheet"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/echarts/5.5.0/echarts.min.js"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#2563EB",
              secondary: "#64748B",
            },
            borderRadius: {
              none: "0px",
              sm: "4px",
              DEFAULT: "8px",
              md: "12px",
              lg: "16px",
              xl: "20px",
              "2xl": "24px",
              "3xl": "32px",
              full: "9999px",
              button: "8px",
            },
            fontFamily: {
              inter: ["Inter", "sans-serif"],
              pacifico: ["Pacifico", "serif"],
            },
          },
        },
      };
    </script>
    <style>
      ::-webkit-scrollbar {
        background-color: white;
      }
      :where([class^="ri-"])::before {
        content: "\f3c2";
      }
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50 font-inter">
    <div class="flex h-screen overflow-hidden">
      <!-- Chap Panel (fixed) -->
      <aside
        class="w-64 bg-white shadow-lg flex flex-col fixed top-0 left-0 bottom-0 z-30"
      >
        <!-- Logo -->
        <div class="p-6 border-b border-gray-200 flex-shrink-0">
          <h1 class="text-2xl font-pacifico text-primary">Car Center</h1>
          <p class="text-sm text-secondary mt-1">We have the best.</p>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4 overflow-y-auto">
          <ul class="space-y-2">
            <li>
              <a
                href="/index"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-dashboard-line"></i>
                </div>
                Dashboard
              </a>
            </li>
            <li>
              <a
                href="/car"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-car-line"></i>
                </div>
                Cars
              </a>
            </li>
            <li>
              <a
                href="#"
                class="flex items-center px-4 py-3 text-white bg-primary rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-user-line"></i>
                </div>
                Clients
              </a>
            </li>
            <li>
              <a
                href="/orders"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-shopping-cart-line"></i>
                </div>
                Orders
              </a>
            </li>
            <li>
              <a
                href="#"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-money-dollar-circle-line"></i>
                </div>
                Payments
              </a>
            </li>
            <li>
              <a
                href="/admins"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-admin-line"></i>
                </div>
                Admins
              </a>
            </li>
            <li>
              <a
                href="/profile"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-user-line"></i>
                </div>
                My Profile
              </a>
            </li>
          </ul>
        </nav>
      </aside>

      <!-- Asosiy Kontent joyi -->
      <div
      class="flex-1 flex flex-col ml-64" style="height: 100vh; min-height: 0; overflow: hidden;"
      >
        <!-- Yuqori Panel (fixed) -->
        <header
          class="bg-white shadow-sm border-b border-gray-200 px-6 py-4 fixed top-0 left-64 right-0 z-20"
        >
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <h2 class="text-xl font-semibold text-gray-800">Clients</h2>
            </div>

            <div class="flex items-center space-x-4">
              <!-- Qidiruv -->
              <div class="relative">
                <input
                  type="text"
                  placeholder="Qidirish..."
                  class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent w-64"
                />
                <div
                  class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 flex items-center justify-center"
                >
                  <i class="ri-search-line text-gray-400"></i>
                </div>
              </div>

              <!-- Xabarnomalar -->
              <button class="relative p-2 text-gray-400 hover:text-gray-600">
                <div class="w-6 h-6 flex items-center justify-center">
                  <i class="ri-notification-line"></i>
                </div>
                <span
                  class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center"
                  >3</span
                >
              </button>

              <!-- Profil -->
              <div class="relative">
                <div
                  id="profileBtn"
                  class="flex items-center space-x-3 cursor-pointer select-none"
                >
                <div class="w-8 h-8 rounded-full overflow-hidden">
                  <img src="" alt="User avatar" class="profileImg w-full h-full object-cover" />
                </div>
                  <div class="text-sm">
                    <p class="fName font-medium text-gray-800">Aziz Karimov</p>
                    <p class="role text-gray-500">Super Admin</p>
                  </div>
                  <div
                    class="w-4 h-4 flex items-center justify-center transition-transform duration-200"
                    id="arrowIcon"
                  >
                    <i class="ri-arrow-down-s-line text-gray-400"></i>
                  </div>
                </div>
  
                <div
                  id="dropdownMenu"
                  class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-50"
                >
                  <ul class="py-1 text-gray-700">
                    <li>
                      <a
                        href="/profile"
                        class="block px-4 py-2 hover:bg-gray-100 transition-colors"
                        >Profilni ko‘rish</a
                      >
                    </li>
                    <li>
                      <hr class="my-1 border-gray-200" />
                    </li>
                    <li>
                      <a
                        href="#"
                        class="block px-4 py-2 text-red-600 hover:bg-red-100 transition-colors"
                        >Log Out</a
                      >
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </header>
        
        <main class="flex-1 overflow-y-auto bg-gray-50 pt-24"
        style="min-height: 0; height: 100%;">
            <div class="p-6">
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                <!-- Umumiy Mijozlar -->
                <div class="p-6 rounded-2xl bg-gradient-to-r from-indigo-500 to-blue-500 text-white shadow-lg relative overflow-hidden">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="text-sm font-light">Umumiy Mijozlar</p>
                      <h2 class="text-3xl font-bold mt-1">3,452</h2>
                      <p class="text-sm mt-2 opacity-90">
                        <i class="ri-arrow-up-line mr-1"></i>+9.1% oylik o‘sish
                      </p>
                    </div>
                    <div class="text-4xl opacity-30 absolute right-4 top-4">
                      <i class="ri-group-fill"></i>
                    </div>
                  </div>
                  <div class="mt-5">
                    <div class="h-2 rounded-full bg-white/30">
                      <div class="h-2 bg-white rounded-full" style="width: 75%"></div>
                    </div>
                    <p class="text-xs mt-1 opacity-90">75% maqsad bajarildi</p>
                  </div>
                </div>
              
                <!-- Yangi Mijozlar -->
                <div class="p-6 rounded-2xl bg-gradient-to-r from-emerald-500 to-lime-500 text-white shadow-lg relative overflow-hidden">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="text-sm font-light">Yangi Mijozlar</p>
                      <h2 class="text-3xl font-bold mt-1">298</h2>
                      <p class="text-sm mt-2 opacity-90">
                        <i class="ri-arrow-up-line mr-1"></i>+14.8% haftalik o‘sish
                      </p>
                    </div>
                    <div class="text-4xl opacity-30 absolute right-4 top-4">
                      <i class="ri-user-add-line"></i>
                    </div>
                  </div>
                  <div class="mt-5">
                    <div class="h-2 rounded-full bg-white/30">
                      <div class="h-2 bg-white rounded-full" style="width: 60%"></div>
                    </div>
                    <p class="text-xs mt-1 opacity-90">60% reja bajarildi</p>
                  </div>
                </div>
              
                <!-- Faol Foydalanuvchilar -->
                <div class="p-6 rounded-2xl bg-gradient-to-r from-sky-500 to-cyan-500 text-white shadow-lg relative overflow-hidden">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="text-sm font-light">Faol Foydalanuvchilar</p>
                      <h2 class="text-3xl font-bold mt-1">1,892</h2>
                      <p class="text-sm mt-2 opacity-90">
                        <i class="ri-arrow-up-line mr-1"></i>+5.7% kunlik o‘sish
                      </p>
                    </div>
                    <div class="text-4xl opacity-30 absolute right-4 top-4">
                      <i class="ri-user-smile-line"></i>
                    </div>
                  </div>
                  <div class="mt-5">
                    <div class="h-2 rounded-full bg-white/30">
                      <div class="h-2 bg-white rounded-full" style="width: 80%"></div>
                    </div>
                    <p class="text-xs mt-1 opacity-90">80% faol mijoz</p>
                  </div>
                </div>
              
                <!-- Bloklangan Mijozlar -->
                <div class="p-6 rounded-2xl bg-gradient-to-r from-rose-500 to-red-500 text-white shadow-lg relative overflow-hidden">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="text-sm font-light">Bloklangan Mijozlar</p>
                      <h2 class="text-3xl font-bold mt-1">37</h2>
                      <p class="text-sm mt-2 opacity-90">
                        <i class="ri-arrow-up-line mr-1"></i>+2.1% oshgan
                      </p>
                    </div>
                    <div class="text-4xl opacity-30 absolute right-4 top-4">
                      <i class="ri-user-unfollow-line"></i>
                    </div>
                  </div>
                  <div class="mt-5">
                    <div class="h-2 rounded-full bg-white/30">
                      <div class="h-2 bg-white rounded-full" style="width: 20%"></div>
                    </div>
                    <p class="text-xs mt-1 opacity-90">E’tiborli o‘sish</p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="p-6 border-b border-gray-200">
                  <div class="flex items-center justify-between mb-6">
                    <h1 class="text-2xl font-bold text-gray-900">Mijozlar ro'yxati</h1>
                    <button
                      class="bg-primary text-white px-4 py-2 !rounded-button whitespace-nowrap hover:bg-blue-600 transition-colors flex items-center gap-2"
                    >
                      <div class="w-4 h-4 flex items-center justify-center">
                        <i class="ri-add-line"></i>
                      </div>
                      Yangi mijoz qo'shish
                    </button>
                  </div>
                  <div class="flex items-center gap-4">
                    <div class="relative flex-1 max-w-md">
                      <div
                        class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 flex items-center justify-center text-gray-400"
                      >
                        <i class="ri-search-line text-sm"></i>
                      </div>
                      <input
                        type="text"
                        placeholder="Mijoz qidirish..."
                        class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"
                      />
                    </div>
                    <div class="flex items-center gap-2">
                      <button
                        id="sortId"
                        class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50 transition-colors flex items-center gap-2 whitespace-nowrap"
                      >
                        <div class="w-4 h-4 flex items-center justify-center">
                          <i class="ri-sort-asc"></i>
                        </div>
                        ID bo'yicha
                      </button>
                      <button
                        id="sortType"
                        class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50 transition-colors flex items-center gap-2 whitespace-nowrap"
                      >
                        <div class="w-4 h-4 flex items-center justify-center">
                          <i class="ri-sort-asc"></i>
                        </div>
                        Mijoz turi
                      </button>
                      <button
                        id="sortStatus"
                        class="px-3 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50 transition-colors flex items-center gap-2 whitespace-nowrap"
                      >
                        <div class="w-4 h-4 flex items-center justify-center">
                          <i class="ri-sort-asc"></i>
                        </div>
                        Status
                      </button>
                    </div>
                  </div>
                </div>
                <div class="overflow-x-auto">
                  <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                      <tr>
                        <th
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100"
                        >
                          <div class="flex items-center gap-2">
                            ID
                            <div class="w-3 h-3 flex items-center justify-center">
                              <i class="ri-arrow-up-down-line text-xs"></i>
                            </div>
                          </div>
                        </th>
                        <th
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100"
                        >
                          <div class="flex items-center gap-2">
                            F.I.Sh
                            <div class="w-3 h-3 flex items-center justify-center">
                              <i class="ri-arrow-up-down-line text-xs"></i>
                            </div>
                          </div>
                        </th>
                        <th
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100"
                        >
                          <div class="flex items-center gap-2">
                            Telefon
                            <div class="w-3 h-3 flex items-center justify-center">
                              <i class="ri-arrow-up-down-line text-xs"></i>
                            </div>
                          </div>
                        </th>
                        <th
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100"
                        >
                          <div class="flex items-center gap-2">
                            Email
                            <div class="w-3 h-3 flex items-center justify-center">
                              <i class="ri-arrow-up-down-line text-xs"></i>
                            </div>
                          </div>
                        </th>
                        <th
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer hover:bg-gray-100"
                        >
                          <div class="flex items-center gap-2">
                            Ro'yxatdan o'tgan sana
                            <div class="w-3 h-3 flex items-center justify-center">
                              <i class="ri-arrow-up-down-line text-xs"></i>
                            </div>
                          </div>
                        </th>
                        <th
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >
                          Status
                        </th>
                        <th
                          class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >
                          Amallar
                        </th>
                      </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                      <% usersData.forEach(user => { %>
                        <tr
                          class="hover:bg-gray-50 cursor-pointer customer-row"
                          data-customer-id="<%= user.id %>"
                        >
                          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            #<%= user.id.toString().padStart(3, '0') %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                              <div class="w-8 h-8 rounded-full overflow-hidden mr-3">
                                <img src="<%= user.avatar %>" alt="Avatar" class="w-full h-full object-cover" />
                              </div>                              
                              <div>
                                <div class="text-sm font-medium text-gray-900">
                                  <%= user.first_name + ' ' + user.last_name %>
                                </div>
                                <div class="text-sm text-gray-500">
                                  <%= user.role || "Mijoz" %>
                                </div>
                              </div>
                            </div>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            <%= user.phone %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            <%= user.email %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= new Date(user.created_at).toLocaleDateString('uz-UZ', { day: '2-digit', month: 'long', year: 'numeric' }) %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap">
                            <% if(user.status === 'active') { %>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Faol</span>
                            <% } else if(user.status === 'pending') { %>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Kutilmoqda</span>
                            <% } else { %>
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Nofaol</span>
                            <% } %>
                          </td>
                          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex items-center gap-2">
                              <a href="/clients/<%= user.id %>" class="text-gray-600 hover:text-gray-800 p-1 rounded">
                                <div class="w-4 h-4 flex items-center justify-center">
                                  <i class="ri-eye-line"></i>
                                </div>
                              </a>
                              <button class="text-red-600 hover:text-red-800 p-1 rounded">
                                <div class="w-4 h-4 flex items-center justify-center">
                                  <i class="ri-delete-bin-line"></i>
                                </div>
                              </button>
                            </div>
                          </td>
                        </tr>
                      <% }) %>
                    </tbody>              
                  </table>
                </div>
                <div
                  class="px-6 py-4 border-t border-gray-200 flex items-center justify-between"
                >
                  <div class="text-sm text-gray-500">
                    Jami 156 ta mijozdan 1-6 ko'rsatilmoqda
                  </div>
                  <div class="flex items-center gap-2">
                    <button
                      class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed"
                      disabled
                    >
                      <div class="w-4 h-4 flex items-center justify-center">
                        <i class="ri-arrow-left-line"></i>
                      </div>
                    </button>
                    <button class="px-3 py-1 bg-primary text-white rounded text-sm">
                      1
                    </button>
                    <button
                      class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50"
                    >
                      2
                    </button>
                    <button
                      class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50"
                    >
                      3
                    </button>
                    <span class="px-2 text-gray-500">...</span>
                    <button
                      class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50"
                    >
                      26
                    </button>
                    <button
                      class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50"
                    >
                      <div class="w-4 h-4 flex items-center justify-center">
                        <i class="ri-arrow-right-line"></i>
                      </div>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </main>
        </div>
        <script src="/js/clients.js"></script>
      </body>
    </html>