<!DOCTYPE html>
<html lang="uz">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Center</title>
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Pacifico&family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.6.0/remixicon.min.css"
      rel="stylesheet"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/echarts/5.5.0/echarts.min.js"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#2563EB",
              secondary: "#64748B",
            },
            borderRadius: {
              none: "0px",
              sm: "4px",
              DEFAULT: "8px",
              md: "12px",
              lg: "16px",
              xl: "20px",
              "2xl": "24px",
              "3xl": "32px",
              full: "9999px",
              button: "8px",
            },
            fontFamily: {
              inter: ["Inter", "sans-serif"],
              pacifico: ["Pacifico", "serif"],
            },
          },
        },
      };
    </script>
    <style>
      ::-webkit-scrollbar {
        background-color: white;
      }
      :where([class^="ri-"])::before {
          content: "\f3c2";
      }
      body {
          font-family: 'Inter', sans-serif;
      }
    </style>
  </head>
  <body class="bg-gray-50 font-inter">
    <div class="flex h-screen">
      <!-- Chap Panel -->
      <div class="w-64 bg-white shadow-lg flex flex-col">
        <!-- Logo -->
        <div class="p-6 border-b border-gray-200">
          <h1 class="text-2xl font-pacifico text-primary">Car Center</h1>
          <p class="text-sm text-secondary mt-1">We have the best.</p>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4">
          <ul class="space-y-2">
            <li>
              <a
                href="#"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-dashboard-line"></i>
                </div>
                Dashboard
              </a>
            </li>
            <li>
              <a
                href="/car"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-car-line"></i>
                </div>
                Cars
              </a>
            </li>
            <li>
              <a
                href="/clients"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-user-line"></i>
                </div>
                Clients
              </a>
            </li>
            <li>
              <a
                href="/orders"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-shopping-cart-line"></i>
                </div>
                Orders
              </a>
            </li>
            <li>
              <a
                href="#"
                class="flex items-center px-4 py-3 text-white bg-primary rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-money-dollar-circle-line"></i>
                </div>
                Payments
              </a>
            </li>
            <li>
              <a
                href="/admins"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-admin-line"></i>
                </div>
                Admins
              </a>
            </li>
            <li>
              <a
                href="/profile"
                class="flex items-center px-4 py-3 text-secondary hover:bg-gray-100 rounded-lg"
              >
                <div class="w-5 h-5 flex items-center justify-center mr-3">
                  <i class="ri-user-line"></i>
                </div>
                My Profile
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <!-- Asosiy Kontent -->
      <div class="flex-1 flex flex-col">
        <!-- Yuqori Panel -->
        <header class="bg-white shadow-sm border-b border-gray-200 px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
              <h2 class="text-xl font-semibold text-gray-800">Payments</h2>
            </div>

            <div class="flex items-center space-x-4">
              <!-- Qidiruv -->
              <div class="relative">
                <input
                  type="text"
                  placeholder="Qidirish..."
                  class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent w-64"
                />
                <div
                  class="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 flex items-center justify-center"
                >
                  <i class="ri-search-line text-gray-400"></i>
                </div>
              </div>

              <!-- Xabarnomalar -->
              <button class="relative p-2 text-gray-400 hover:text-gray-600">
                <div class="w-6 h-6 flex items-center justify-center">
                  <i class="ri-notification-line"></i>
                </div>
                <span
                  class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center"
                  >3</span
                >
              </button>

              <!-- Profil -->
              <div class="relative">
                <div
                  id="profileBtn"
                  class="flex items-center space-x-3 cursor-pointer select-none"
                >
                <div class="w-8 h-8 rounded-full overflow-hidden">
                  <img src="" alt="User avatar" class="profileImg w-full h-full object-cover" />
                </div>
                  <div class="text-sm">
                    <p class="fName font-medium text-gray-800">Aziz Karimov</p>
                    <p class="role text-gray-500">Super Admin</p>
                  </div>
                  <div class="w-4 h-4 flex items-center justify-center transition-transform duration-200" id="arrowIcon">
                    <i class="ri-arrow-down-s-line text-gray-400"></i>
                  </div>
                </div>
              
                <div
                  id="dropdownMenu"
                  class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-50"
                >
                  <ul class="py-1 text-gray-700">
                    <li>
                      <a
                        href="/profile"
                        class="block px-4 py-2 hover:bg-gray-100 transition-colors"
                        >Profilni ko‘rish</a
                      >
                    </li>
                    <li>
                      <hr class="my-1 border-gray-200" />
                    </li>
                    <li>
                      <a
                        href="#"
                        class="block px-4 py-2 text-red-600 hover:bg-red-100 transition-colors"
                        >Log Out</a
                      >
                    </li>
                  </ul>
                </div>
              </div>
          </div>
        </header>
        <main class="p-8">
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
              <div
                class="bg-white p-6 rounded-lg shadow-sm border border-gray-100"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm text-secondary">Total Payments</p>
                    <p class="text-2xl font-semibold text-gray-900 mt-1">
                      $124,563
                    </p>
                  </div>
                  <div
                    class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center"
                  >
                    <i
                      class="ri-money-dollar-circle-line text-green-600 text-xl"
                    ></i>
                  </div>
                </div>
                <div class="flex items-center mt-4">
                  <span class="text-green-600 text-sm font-medium">+12.5%</span>
                  <span class="text-secondary text-sm ml-2">from last month</span>
                </div>
              </div>
              <div
                class="bg-white p-6 rounded-lg shadow-sm border border-gray-100"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm text-secondary">Successful</p>
                    <p class="text-2xl font-semibold text-gray-900 mt-1">1,247</p>
                  </div>
                  <div
                    class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center"
                  >
                    <i class="ri-check-line text-blue-600 text-xl"></i>
                  </div>
                </div>
                <div class="flex items-center mt-4">
                  <span class="text-green-600 text-sm font-medium">+8.2%</span>
                  <span class="text-secondary text-sm ml-2">from last month</span>
                </div>
              </div>
              <div
                class="bg-white p-6 rounded-lg shadow-sm border border-gray-100"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm text-secondary">Pending</p>
                    <p class="text-2xl font-semibold text-gray-900 mt-1">23</p>
                  </div>
                  <div
                    class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center"
                  >
                    <i class="ri-time-line text-yellow-600 text-xl"></i>
                  </div>
                </div>
                <div class="flex items-center mt-4">
                  <span class="text-yellow-600 text-sm font-medium">-2.1%</span>
                  <span class="text-secondary text-sm ml-2">from last month</span>
                </div>
              </div>
              <div
                class="bg-white p-6 rounded-lg shadow-sm border border-gray-100"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm text-secondary">Failed</p>
                    <p class="text-2xl font-semibold text-gray-900 mt-1">12</p>
                  </div>
                  <div
                    class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center"
                  >
                    <i class="ri-close-line text-red-600 text-xl"></i>
                  </div>
                </div>
                <div class="flex items-center mt-4">
                  <span class="text-red-600 text-sm font-medium">+1.3%</span>
                  <span class="text-secondary text-sm ml-2">from last month</span>
                </div>
              </div>
            </div>
        
            <!-- Filters -->
            <div
              class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 mb-6"
            >
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <div class="relative">
                    <div
                      class="w-5 h-5 flex items-center justify-center absolute left-3 top-1/2 transform -translate-y-1/2"
                    >
                      <i class="ri-search-line text-secondary"></i>
                    </div>
                    <input
                      type="text"
                      placeholder="Search payments..."
                      class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent w-64"
                    />
                  </div>
                  <button
                    class="flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm text-secondary hover:bg-gray-50"
                  >
                    <div class="w-4 h-4 flex items-center justify-center mr-2">
                      <i class="ri-filter-line"></i>
                    </div>
                    Filter
                  </button>
                  <button
                    class="flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm text-secondary hover:bg-gray-50"
                  >
                    <div class="w-4 h-4 flex items-center justify-center mr-2">
                      <i class="ri-calendar-line"></i>
                    </div>
                    Date Range
                  </button>
                </div>
                <button
                  class="flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm text-secondary hover:bg-gray-50"
                >
                  <div class="w-4 h-4 flex items-center justify-center mr-2">
                    <i class="ri-download-line"></i>
                  </div>
                  Export
                </button>
              </div>
            </div>
        
            <!-- Payment Cards -->
            <div class="space-y-4">
                <% paymentData.forEach(payment => { %>
                  <div
                    class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 hover:bg-gray-50 transition-colors cursor-pointer"
                  >
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-4">
                        <div
                          class="w-12 h-12 rounded-lg flex items-center justify-center
                          <% if (payment.status === 'paid') { %> bg-green-100 <% } 
                             else if (payment.status === 'pending') { %> bg-yellow-100 <% } 
                             else if (payment.status === 'late') { %> bg-red-100 <% } %>"
                        >
                          <i class="ri-bank-card-line text-xl 
                            <% if (payment.status === 'paid') { %> text-green-600 
                            <% } else if (payment.status === 'pending') { %> text-yellow-600 
                            <% } else { %> text-red-600 <% } %>">
                          </i>
                        </div>
                        <div>
                          <h3 class="font-semibold text-gray-900">
                            To‘lov ID: <%= payment.id %>
                          </h3>
                          <p class="text-sm text-secondary">Muddati: <%= payment.due_date.toISOString().split('T')[0] %></p>
                        </div>
                      </div>
              
                      <div class="flex items-center space-x-6">
                        <div class="text-right">
                          <p class="font-semibold text-gray-900">
                            $<%= payment.paid_amount %> / $<%= payment.amount %>
                          </p>
                          <p class="text-sm text-secondary">
                            <%= new Date(payment.due_date).toLocaleDateString() %>
                          </p>
                        </div>
              
                        <div class="flex items-center px-3 py-1 
                          <% if (payment.status === 'paid') { %> bg-green-100 text-green-800 
                          <% } else if (payment.status === 'pending') { %> bg-yellow-100 text-yellow-800 
                          <% } else { %> bg-red-100 text-red-800 <% } %> 
                          rounded-full text-sm font-medium"
                        >
                          <div class="w-2 h-2 
                            <% if (payment.status === 'paid') { %> bg-green-500 
                            <% } else if (payment.status === 'pending') { %> bg-yellow-500 
                            <% } else { %> bg-red-500 <% } %> 
                            rounded-full mr-2">
                          </div>
                          <%= payment.status.charAt(0).toUpperCase() + payment.status.slice(1) %>
                        </div>
              
                        <div class="w-5 h-5 flex items-center justify-center">
                          <i class="ri-arrow-right-s-line text-secondary"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
              
        
            <!-- Pagination -->
            <div class="flex items-center justify-between mt-8">
              <p class="text-sm text-secondary">
                Showing 1 to 6 of 1,247 results
              </p>
              <div class="flex items-center space-x-2">
                <button
                  class="px-3 py-2 border border-gray-300 rounded-lg text-sm text-secondary hover:bg-gray-50 disabled:opacity-50"
                  disabled
                >
                  Previous
                </button>
                <button
                  class="px-3 py-2 bg-primary text-white rounded-lg text-sm"
                >
                  1
                </button>
                <button
                  class="px-3 py-2 border border-gray-300 rounded-lg text-sm text-secondary hover:bg-gray-50"
                >
                  2
                </button>
                <button
                  class="px-3 py-2 border border-gray-300 rounded-lg text-sm text-secondary hover:bg-gray-50"
                >
                  3
                </button>
                <span class="px-3 py-2 text-secondary">...</span>
                <button
                  class="px-3 py-2 border border-gray-300 rounded-lg text-sm text-secondary hover:bg-gray-50"
                >
                  208
                </button>
                <button
                  class="px-3 py-2 border border-gray-300 rounded-lg text-sm text-secondary hover:bg-gray-50"
                >
                  Next
                </button>
              </div>
            </div>
          </main>

    </div>
</div>
</body>
</html>